<%- include("partials/header.ejs") %>

<h1 class="text-center py-3">Equipments based on the Lab`s Areas of Study</h1>
<div class="container py-3 px-lg-5">
  <div class="row gx-lg-5">
    <% data.forEach(utility => { %>

    <div class="col-lg-6 col-xxl-4 mb-5">
      <div class="card bg-info border-0 h-100 rounded-div">
        <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
          <div
            class="feature bg-primary bg-gradient text-white rounded-3 mb-4 mt-n4"
          >
            <i class="bi bi-collection"></i>
          </div>
          <h3 class="fs-4 fw-bold"><%= utility.name %></h3>
          <form
            class="py-1"
            action="/<%= utility.name %>/equipments"
            method="GET"
          >
            <button
              type="button submit"
              class="btn btn-primary btn-lg px-4 gap-3"
            >
              equipments
            </button>
          </form>
        </div>
      </div>
    </div>

    <% }); %>
  </div>
</div>
<%-include("partials/footer.ejs") %>
